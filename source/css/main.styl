/* Paginator Style 底部导航栏*/
.pagination {
  display: inline-block;
  padding: 0;
  margin: 0;
  & a, & span {
  transition: background-color .3s;
  color: black;
  padding: 8px 16px;
  text-decoration: none;
  border-radius: 5px;
  }
  & .current {
  background-color: #4CAF50;
  color: white;
  }
  & a:hover:not(.current) {
    background-color: #ddd;
  }
}



